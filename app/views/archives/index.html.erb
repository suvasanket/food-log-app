<div class="columns is-centered mt-6">
  <div class="column is-half">
    <% @entries.each do |day,entries| %>
      <h3 class="is-size-3 has-weight-bold mb-4 has-text-centered">Entries of <%= day %></h3>

      <nav class="level is-mobile">
        <div class="level-item has-text-centered">
            <div>
              <p class="heading">Calories</p>
              <p class="title"><%= entries.pluck(:calories).sum %></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Protiens</p>
            <p class="title"><%= entries.pluck(:protiens).sum %>g</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Carbohydrates</p>
            <p class="title"><%= entries.pluck(:carbohydrates).sum %>g</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Fats</p>
            <p class="title"><%= entries.pluck(:fats).sum %>g</p>
          </div>
        </div>
      </nav>

      <% entries.each do |entry| %>
        <%= link_to entry_path(entry) do %>
          <div class="card">
            <div class="card-content">
              <strong><%= entry.meal_type %></strong><br/>
              <%= entry.calories %> calories,
              <%= entry.protiens %>g protiens,
              <%= entry.carbohydrates %>g carbs,
              <%= entry.fats %> fats
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
