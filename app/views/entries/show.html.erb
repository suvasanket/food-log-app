<% content_for :title do %>
  <%= DateTime.now.to_fs(:nice_date) %> &ndash; <%= @entry.meal_type %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">

    <nav class="panel is-warning">
      <p class="panel-heading">
        <%= @entry.meal_type %>
      </p>
      <div class="panel-block">
        calories: <%= @entry.calories %>
      </div>
      <div class="panel-block">
        protiens: <%= @entry.protiens %>
      </div>
      <div class="panel-block">
        carbs: <%= @entry.carbohydrates %>
      </div>
      <div class="panel-block">
        fats: <%= @entry.fats %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "edit", edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to "back", entries_path, class: "button is-gray" %>
        <%= button_to "delete", @entry, method: :delete, class: "button is-gray" %>
      </div>
    </div>
  </div>
</div>
