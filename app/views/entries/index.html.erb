<% content_for :title do %>
  foodlog &ndash; <%= DateTime.now.to_fs(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
  <div class="column is-one-quarter">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title"><%= entry.meal_type %></p>
      </header>

      <div class="card-content">
        <div class="content">
          <p><span class="has-text-weight-bold"><%= entry.calories %></span> calories</p>
          <p><span class="has-text-weight-bold"><%= entry.protiens %></span> gm of protiens</p>
          <p><span class="has-text-weight-bold"><%= entry.carbohydrates %></span> gm of carbohydrates</p>
          <p><span class="has-text-weight-bold"><%= entry.fats %></span> gm of fats</p>
          <p class="italic"> <%= time_ago_in_words(entry.created_at) %> ago</p>
        </div>
      </div>

      <div class="card-footer">
        <%= link_to "show", entry, class: "card-footer-item"%>
        <%= link_to "edit", edit_entry_path(entry), class: "card-footer-item" %>
        <%= link_to "delete", entry, method: :delete, class: "card-footer-item" %>
      </div>

    </div>
  </div>

<% end %>
</div>

<div class="columns is-centered mt-6">
  <%= link_to "Show all", archives_index_path, class: "button is-centered is-link" %>
</div>
